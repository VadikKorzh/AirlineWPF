<Window x:Class="AirlineWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AirlineWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Background="BurlyWood">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0">
            <Button Name="populateButton" Margin="10" Background="ForestGreen" Foreground="Bisque">Populate</Button>
            <Button Name="deleteButton" Margin="10" Background="Crimson" Foreground="WhiteSmoke">Delete</Button>
        </StackPanel>
        <DataGrid Grid.Row="0" Grid.Column="1" Name="dataGrid1" Margin="10" Background="Goldenrod"></DataGrid>
    </Grid>
</Window>
